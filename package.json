    "deep-assign": "~2.0.0",
    "es6-promise": "~4.0.5",
    "lodash": "~4.17.4",
    "mirror-creator": "~1.1.0",
    "qs": "~6.3.0",
    "react": "~15.4.2",
    "react-addons-css-transition-group": "~15.4.2",
    "react-bootstrap": "~0.30.7",
    "react-dom": "~15.4.2",
    "react-hot-loader": "~3.0.0-beta.6",
