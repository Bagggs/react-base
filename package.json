{
  "name": "react-base",
  "version": "1.1.0",
  "authors": [
    "Marat Fakhreev <marat.fakhreev@flatstack.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com:fs/react-base.git"
  },
  "scripts": {
    "stylelint": "stylelint ./app/{**,**/**}/*.css --config ./config/stylelint.js",
    "stylesort": "postcss -u postcss-sorting -c ./config/postcss-cli.js -r ./app/{**,**/**}/*.css",
    "eslint": "eslint server.js ./app ./config --ext .js,.jsx",
    "jest": "jest",
    "lint": "npm run stylelint && npm run eslint",
    "test": "npm run lint && npm run jest",
    "start": "node ./server"
  },
  "license": "MIT",
  "engines": {
    "node": "7.4.x"
  },
  "dependencies": {
    "alt": "~0.18.6",
